<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    tools:context=".User_Information_fragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/balance_cardview"
                    android:layout_width="373dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="555dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/balance_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#E6E6E6"
                            android:fontFamily="@font/castoro"
                            android:paddingLeft="5dp"
                            android:paddingTop="1dp"
                            android:text="kmsdlidsld"
                            android:textColor="#000000"
                            android:textSize="22sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="520dp"
                    android:fontFamily="@font/castoro"
                    android:text="Balance"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/newpassword_cardview"
                    android:layout_width="373dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="395dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/password1_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#E6E6E6"
                            android:ems="10"
                            android:fontFamily="@font/castoro"
                            android:inputType="textPassword"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="1dp"
                            android:text="dksajkljdsakldsa"
                            android:textSize="22sp"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="440dp"
                    android:fontFamily="@font/castoro"
                    android:text="Repeat password"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/repeatpassword_cardview"
                    android:layout_width="373dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="475dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/password2_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#E6E6E6"
                            android:ems="10"
                            android:fontFamily="@font/castoro"
                            android:inputType="textPassword"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="1dp"
                            android:text="SKJSAKJ"
                            android:textSize="22sp"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/castoro"
                    android:text="E-mail"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/email_cardview"
                    android:layout_width="373dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="315dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/email_id_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#E6E6E6"
                            android:ems="10"
                            android:fontFamily="@font/castoro"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="1dp"
                            android:text="Name"
                            android:textSize="22sp"
                            tools:ignore="TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="360dp"
                    android:fontFamily="@font/castoro"
                    android:text="New password"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/profile_picture_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/morgan_freeman_scaled" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#F7CACA"
                    app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/exit_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/pektor" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="123dp"
                    android:layout_marginRight="130dp"
                    android:backgroundTint="#0E7ED2"
                    app:cardCornerRadius="100dp"
                    app:cardMaxElevation="100dp">

                        <ImageView
                            android:id="@+id/change_pp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="1dp"
                            android:src="@drawable/vector__1_" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="200dp"
                    android:fontFamily="@font/castoro"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/username_cardview"
                    android:layout_width="373dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="235dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/username_id_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#E6E6E6"
                            android:ems="10"
                            android:fontFamily="@font/castoro"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="1dp"
                            android:text="Name"
                            android:textSize="22sp"
                            tools:ignore="TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/save_button_id"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="610dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#0E7ED2"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:text="Save" />

        </FrameLayout>
</ScrollView>
